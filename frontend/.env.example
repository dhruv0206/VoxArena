# ===========================================
# VoxArena Frontend Environment Variables
# ===========================================
# Copy this file to .env.local and fill in your values

# -------------------------------------------
# Clerk Authentication
# Get these from: https://clerk.com
# -------------------------------------------
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_publishable_key
CLERK_SECRET_KEY=sk_test_your_secret_key

# Clerk redirect URLs
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/dashboard

# -------------------------------------------
# LiveKit (for voice sessions)
# Get these from: https://cloud.livekit.io
# -------------------------------------------
LIVEKIT_API_KEY=APIxxxxxxxxxxxxxxx
LIVEKIT_API_SECRET=your_livekit_api_secret
LIVEKIT_URL=wss://your-project.livekit.cloud

# -------------------------------------------
# Google Gemini (for LLM models list)
# Get from: https://aistudio.google.com/app/apikey
# -------------------------------------------
GOOGLE_API_KEY=your_google_api_key

# -------------------------------------------
# Deepgram (optional, for STT models list)
# Get from: https://console.deepgram.com
# -------------------------------------------
DEEPGRAM_API_KEY=your_deepgram_api_key

# -------------------------------------------
# Resemble AI (for TTS voices list)
# Get from: https://app.resemble.ai
# -------------------------------------------
RESEMBLE_API_KEY=your_resemble_api_key
RESEMBLE_PROJECT_UUID=your_project_uuid

# -------------------------------------------
# Backend API (optional, for future use)
# -------------------------------------------
NEXT_PUBLIC_API_URL=http://localhost:8000/api
